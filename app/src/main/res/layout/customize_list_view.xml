<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B3AD8">

        <ImageView
            android:id="@+id/imgAnimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtAnimalName"
            android:layout_width="233dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="113dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="7dp"
            android:text="Name of the Animal"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtAnimalPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtAnimalName"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:text="Animal Power:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtAnimalSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtAnimalName"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113dp"
            android:text="Animal Speed:"
            android:textSize="24sp" />
    </RelativeLayout>
</LinearLayout>
